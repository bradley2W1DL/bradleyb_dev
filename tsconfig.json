{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@images/*": ["src/images/*"],
      "@layouts/*": ["src/layouts/*"],
      "@alpine/*": ["src/alpine/*"]
    },
    "plugins": [
      { "name": "@astrojs/ts-plugin" }
    ]
  }
}
